@page "{id}"
@model MyLearn.Pages.Admin.Course.IndexEpisodeModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت بخش ها </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading ">
                <a href="/Admin/Course/CreateEpisode/@ViewData["CourseId"]" class="btn btn-success">افزودن بخش جدید</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام بخش </th>

                                    <th>زمان بخش</th>
                                    <th>وضعیت</th>
                                    <th>دستورات</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.courseEpisodes)
                                {
                                    <tr class="gradeA odd">
                                        <td>
                                            @item.EpisodeTitle
                                        </td>
                                        <td>@item.EpisodeTime</td>

                                        @if (item.IsFree)
                                        {
                                            <td>رایگان</td>
                                        }
                                        else
                                        {
                                            <td>نقدی</td>
                                        }


                                        <td>
                                            <a class="btn btn-warning " href="/Admin/Course/EditEpisode/@item.CourseId">ویرایش</a>


                                            <a class="btn btn-danger " href="/Admin/Admin/DeleteCourse/@item.CourseId">حذف</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>


                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
