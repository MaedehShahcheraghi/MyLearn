@page
@using MyLearn.DataLayer.Entities.Permission;
@model MyLearn.Pages.Admin.Roles.CreateRoleModel
@{
    List<Permission> permissions = ViewData["Permission"] as List<Permission>;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن نقش</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام نقش:</label>
                        <input type="text" asp-for="role.RoleTitle" class="form-control">
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    دسترسی های نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <ul>
                        @foreach (var permission in permissions.Where(p => p.ParentId == null).ToList())
                        {
                            <li class="col-12">
                                <input type="checkbox" class="custom-control-input" value="@permission.PermissionId" name="selectedPermission" />@permission.PermissionTitle
                              @if (permissions.Any(p=> p.ParentId==permission.PermissionId))
                                {
                                    @foreach (var permission2 in permissions.Where(p=> p.ParentId==permission.PermissionId).ToList())
                                    {
                                        <ul>
                                            <li class="col-12">
                                                <input type="checkbox" class="custom-control-input" value="@permission2.PermissionId" name="selectedPermission" />@permission2.PermissionTitle
                                                @if (permissions.Any(p => p.ParentId == permission2.PermissionId))
                                                {
                                                    @foreach (var permission3 in permissions.Where(p => p.ParentId == permission2.PermissionId).ToList())
                                                    {
                                                        <ul>
                                                            <li class="col-12">
                                                                <input type="checkbox" class="custom-control-input" value="@permission3.PermissionId" name="selectedPermission" />@permission3.PermissionTitle
                                                            </li>
                                                        </ul>
                                                    }
                                                }
                                            </li>

                                        </ul>
                                    }
                                }
                                
                            </li>

                        }
                    </ul>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>