
@page
@using TopLearn.Core.Convertors;
@model MyLearn.Pages.Admin.Users.IndexModel
@{
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading ">
               <a href="/Admin/Users/CreateUser" class="btn btn-success">افزودن کاربر جدید</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <form>
                            <div class="row align-items-center justify-content-center">
                                <div class="col-sm-5 form-group">
                                    <label>نام کاربری</label>
                                    <input class="form-control" name="userName" placeholder="نام کاربری" />
                                </div>
                                <div class="col-sm-5 form-group">
                                    <label>ایمیل</label>
                                    <input class="form-control" name="eamil" placeholder="ایمیل" />
                                </div>
                                <div class="col-sm-2">
                                    <input type="submit" value="بگرد" class="btn btn-primary " style="margin-top:2rem;" />
                                    <a href="/Admin/Users" class="btn btn-primary " style="margin-top:2rem;" >پاک کن</a>

                                </div>
                            </div>
                        </form>
                        <br />
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ عضویت</th>
                                    <th>دستورات</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Users.Item1)
                                {
                                    <tr class="gradeA odd">
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        @if (item.IsActive)
                                        {
                                            <td> حساب فعال</td>
                                        }
                                        else
                                        {
                                            <td>حساب غیر فعال</td>
                                        }
                                        <td>@item.RegisterDate.ToShamsi()</td>
                                        <td>
                                            <a class="btn btn-warning " href="/Admin/Users/EditUser/@item.UserId">ویرایش</a>
                                            <a class="btn btn-danger " href="/Admin/Users/DeleteUser/@item.UserId">حذف</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table><div class="row">
                            <div class="col-sm-6">
                            </div><div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.Users.Item2; i++)
                                        {
                                            <li class="paginate_button @(i==Model.Users.Item3?"active":"") " aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Users?pageId=@i">@i</a>
                                            </li>

                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>