@page "{id}"
@using MyLearn.DataLayer.Entities.User;
@model MyLearn.Pages.Admin.Users.EditUserModel
@{
    List<Role> Roles = ViewData["Roles"] as List<Role>;
    List<int> UserRoles = ViewData["UserRoles"] as List<int>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کاربر </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="editUserModel.UserId" class="form-control" >
        <input type="hidden" asp-for="editUserModel.AvatarName" class="form-control" >
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" asp-for="editUserModel.UserName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>ایمیل</label>
                        <input type="email" asp-for="editUserModel.Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>کلمه عبور</label>
                        <input type="text" asp-for="editUserModel.Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>انتخاب نقش کاربر</label>
                          @foreach (var item in Roles)
                        {
                        <div class="checkbox">
                        <label>
                        <input type="checkbox" name="SelectedRoles" @(UserRoles.Any(u=> u==item.RoleId)?"checked":"") value="@item.RoleId">@item.RoleTitle
                        </label>
                        </div>
                        }

                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر پروفایل
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <img id="imgAvatar" class="thumbnail" src="/UserAvatar/@Model.editUserModel.AvatarName" />
                    <div class="form-group">
                        <label>انتخاب تصویر</label>
                        <input type="file" asp-for="editUserModel.UserAvatar">
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>

@section Scripts
    {
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#CreatUserViewModel_UserAvatar").change(function () {
            readURL(this);
        });
    </script>
}