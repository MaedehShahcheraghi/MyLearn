@using MyLearn.Core.Service.UserService;
@using MyLearn.DataLayer.Entities.Course;
@using TopLearn.Core.Convertors;
@inject IUserService userservice;
@model Course
@{
    ViewData["Title"] = Model.CourseTitle;
    bool InUserBuy = false;
    if (User.Identity.IsAuthenticated)
    {
        InUserBuy = userservice.InUserUsed(Model.CourseId, User.Identity.Name);

    }

}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"> تاپ لرن </a></li>
            <li class="breadcrumb-item active"><a href="#"> دوره ها </a></li>
            <li class="breadcrumb-item active" aria-current="page"> @Model.CourseTitle </li>
        </ul>
    </nav>
</div>

<div class="container">
    <section class="term-content">
        <header><h1> @Model.CourseTitle </h1></header>
        <div class="row">

            <div class="col-md-8 col-sm-12 col-xs-12 pull-left">
                <section class="term-description">
                    <img src="/Course/CourseImage/@Model.CourseImageName">

                    @Html.Raw(Model.CourseDescreption)
                    @if (!string.IsNullOrEmpty(Model.DemoFileName))
                    {
                        <div>
                            <video controls style="width:100%;">

                                <source src="~/Course/CourseDemo/@Model.DemoFileName" />

                            </video>
                        </div>
                    }



                    <h2> سرفصل های این دوره : </h2>
                    <hr />
                    <br />
                    <div>
                        @{
                            var courseepisode = ViewBag.episode as CourseEpisode;
                        }
                        @if (courseepisode != null)
                        {
                            <h2>@courseepisode.EpisodeTitle</h2>
                            <video controls style="width:100%;">
                                <source src="@ViewBag.filepath" />
                            </video>
                        }

                    </div>
                    <ul>
                        @if (Model.CourseEpisodes.Any())
                        {
                            @foreach (var item in Model.CourseEpisodes)
                            {

                                <li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        @if (item.IsFree)
                                        {

                                            <h3>
                                                <a href="/Course/DownloadFile/@item.EpisodeId">
                                                    @item.EpisodeTitle
                                                </a>
                                            </h3>
                                        }
                                        else if (InUserBuy)
                                        {
                                            <h3>
                                                <a href="/Course/DownloadFile/@item.EpisodeId">
                                                    @item.EpisodeTitle
                                                </a>
                                            </h3>
                                        }
                                        else
                                        {
                                            <h3>
                                                @item.EpisodeTitle
                                            </h3>
                                        }
                                    }
                                    else
                                    {
                                        <h3>
                                            @item.EpisodeTitle
                                        </h3>
                                    }
                                    @if (item.IsFree)
                                    {
                                        <i> رایگان </i>
                                    }
                                    else
                                    {
                                        <i> نقدی </i>
                                    }

                                    <span>@item.EpisodeTime</span>
                                    <span style="margin-left:10px">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            if (item.IsFree)
                                            {
                                                <a href="/Course/ShowCourse/@Model.CourseId?episode=@item.EpisodeId">
                                                    تماشا
                                                </a>
                                            }
                                            else
                                            {
                                                @if (InUserBuy)
                                                {
                                                    <a href="/Course/ShowCourse/@Model.CourseId?episode=@item.EpisodeId">
                                                        تماشا
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="text-danger">تماشا</a>
                                                }
                                            }
                                        }
                                    </span>
                                </li>

                            }
                        }

                    </ul>



                </section>
                <section class="user-comments">
                    <header><h3> نظرات کاربران </h3></header>
                    <div class="inner">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Course" asp-action="CreateComment"
                                  data-ajax="true"
                                  data-ajax-method="post"
                                  data-ajax-mode="replace"
                                  data-ajax-update="#listComment"
                                  data-ajax-success="Success">
                                <input type="hidden" name="courseId" value="@Model.CourseId" />
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <textarea class="form-control" id="courseComment_Comment" name="comment" placeholder="متن نظر"></textarea>
                                        </div>

                                    </div>
                                    <div class="col-xs-12">
                                        <button type="submit" id="submit" class="btn btn-success"> ثبت دیدگاه </button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                جهت درج نظر باید وارد سایت شوید
                            </div>
                        }
                        @* <div class="comment-list" id="listComment">
                        </div>*@   
                      
                        <div class="inner">

                            <div class="comment-list" id="listComment">
                            </div>
                        </div>
                    </div>
                </section>


            </div>
            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">
                <div class="statistics">
                    <ul>
                        <li>
                            <span> مدت دوره </span>

                            @{
                                TimeSpan time = new TimeSpan(Model.CourseEpisodes.Sum(e => e.EpisodeTime.Ticks));
                            }
                            <i> @time </i>
                        </li>
                        <li>
                            <span> تعداد ویدیوها </span>
                            <i> @Model.CourseEpisodes.Count </i>
                        </li>
                        <li>
                            <span> تعداد دانشجوها </span>
                            <i> 2</i>
                        </li>
                    </ul>

                    @if (Model.CoursePrice != 0 && !InUserBuy)
                    {
                        <a href="/Course/BuyCourse/@Model.CourseId"> شرکت در دوره : @Model.CoursePrice.ToString("#,0") تومان </a>
                    }
                </div>

                <article class="teacher-info">
                    <img src="/UserAvatar/@Model.User.AvatarName">
                    <h2> مدرس : @Model.User.UserName </h2>
                </article>

                <article class="term-info">
                    <h2> اطلاعات این دوره </h2>
                    <ul>
                        <li>سطح دوره: @Model.CourseStatus.StatusTitle</li>
                        <li>وضعیت دوره: @Model.CourseLevel.LevelTitle</li>
                        @if (Model.CoursePrice != 0)
                        {
                            <li>قیمت : @Model.CoursePrice.ToString("#,0") تومان</li>
                        }
                        else
                        {
                            <li> رایگان </li>
                        }
                        <li>تاریخ ثبت این دوره : @Model.CreateDate.ToShamsi()</li>
                        <li>آخرین بروزرسانی دوره : @Model.UpdateDate?.ToShamsi()</li>
                    </ul>
                    <div id="vote">
                    </div>
                </article>

                <div class="share-layer">
                    <span> به اشتراک گذاری </span>
                    <a href=""><i class="zmdi zmdi-facebook"></i></a>
                    <a href=""><i class="zmdi zmdi-google-old"></i></a>
                    <a href=""><i class="zmdi zmdi-twitter"></i></a>
                    <a href=""><i class="zmdi zmdi-linkedin"></i></a>
                </div>

                @if (Model.Tags != null)
                {
                    <div class="tags-layer">
                        @foreach (string tag in Model.Tags.Split('-', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <a href="/Course?filter=@tag"> @tag </a>
                        }
                    </div>
                }
                <div class="">
                       @if (Model.CoursePrice!=0 && InUserBuy)
                    {
                   
                    <a href="/Forum/CreateQuestion/@Model.CourseId" class="btn btn-block btn-warning">پرسیدن سوال</a>
                    <a href="/Forum/Index/@Model.CourseId" class="btn btn-block btn-info"> سوالات این دوره</a>
                   
                    }else if(Model.CoursePrice==0)
                    {

                    <a href="/Forum/CreateQuestion/@Model.CourseId" class="btn btn-block btn-warning">پرسیدن سوال</a>
                    <a href="/Forum/Index/@Model.CourseId" class="btn btn-block btn-info"> سوالات این دوره</a>
                    }

                </div>
            </aside>
        </div>
    </section>
</div>

@section Scripts
    {

    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        function Success() {

            $("#courseComment_Comment").val("");
        }

        $(function () {
            $("#listComment").load("/Course/ShowComment/" + @Model.CourseId);
        });

        function pageComment(pageid) {
            $("#listComment").load("/Course/ShowComment/" + @Model.CourseId+"?pageId=" + pageid);
        }
        $(function () {
            $("#vote").load("/Course/CourseVote/" + @Model.CourseId);
        })
        function Vote(vote) {
            $("#vote").load("/Course/AddVote/@(Model.CourseId)?vote=" + vote);
        }
    </script>
}
