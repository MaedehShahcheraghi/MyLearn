@using MyLearn.Core.Service.Course;
@inject ICourseService courseservice;
@{
    ViewData["Title"] = "Home Page";
}


@section SearchBox
    {
    <header>
        <a href="" class="logo"><img src="~/css/images/logo.svg" /></a>
        <h1> با اساتید مجرب و کارآزموده در خودآموز مای لرن </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form action="/Course" method="get">
            <input type="text" name="filter" id="autFilter" placeholder="چی دوست داری یاد بگیری ؟">
            <button  style="background-color:royalblue !important;"><i class="zmdi zmdi-search "></i></button>
        </form>
    </div>
}
<main id="home-page">
    <div class="container">
        <section class="terms-items">
            <header>
                <h2> آخرین دوره های مای لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                <!-- col -->
                <cache expires-after="@TimeSpan.FromMinutes(5)">
                    @await Component.InvokeAsync("LatesCourse")
                </cache>

            </div>
        </section>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب مای لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
               @foreach (var item in courseservice.GetPopularCourses())
                {
                    <partial name="_BoxCourse" model="item"/>
                }
          
            </div>
        </section>
    </div>
</main>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#autFilter").autocomplete({
                source: 'api/Courseapi/search'
            });
        });
    </script>
}
