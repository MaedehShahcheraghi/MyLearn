@using MyLearn.DataLayer.Entities.Course;
@model List<CourseGroup>
@{
}
<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>

                @foreach (var item in Model.Where(g => g.ParentId == null))
                {
                    <li>
                        <a href="/Course?selectedGroups=@item.GroupId"> @item.GroupTitle </a>
                        @if (Model.Any(m => m.ParentId == item.GroupId))
                        {
                            <ul>

                                @foreach (var subgroup in Model.Where(m => m.ParentId == item.GroupId))
                                {
                                    <li><a href="/Course?selectedGroups=@subgroup.GroupId"> @subgroup.GroupTitle </a></li>

                                }
                            </ul>

                        }
                    </li>
                }

            </ul>
        </nav>
    </div>
</div>