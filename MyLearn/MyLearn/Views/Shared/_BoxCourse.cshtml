@using MyLearn.Core.Dtos.Admin.Course;
@model CourseViewModel

<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 term-col">
    <article>
        <a href="/Course/ShowCourse/@Model.CourseId" class="img-layer"><img style="height:150px;" src="/Course/thump/@Model.ImageName"></a>
        <h2><a href="/Course/ShowCourse/@Model.CourseId">@Model.CourseTitle </a></h2>
        <span> @((Model.CoursePrice <= 0) ? "رایگان" : @Model.CoursePrice)</span>
        <i>@Model.EpisodeTime</i>
    </article>
</div>
