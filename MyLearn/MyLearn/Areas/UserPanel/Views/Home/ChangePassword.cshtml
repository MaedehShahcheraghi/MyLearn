@using MyLearn.Core.Dtos.UserPanel;
@model ChangePasswordForUserPanel
@{
    ViewData["Title"] = "ورود به سایت";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">تغییر کلمه عبور</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="container-content">

                    <header><h2> تغییر کلمه عبور </h2></header>

                    <div class="form-layer">
                        @if (ViewBag.IsSuccess != null)
                        {
                            <div class="alert alert-success">
                                <p class="help-block">پسورد شما با موفقیت تغییر کرد</p>
                            </div>
                        }
                        <form asp-action="ChangePassword" method="post">

                            <div class="input-group">
                                <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                                <input asp-for="Password" type="text" class="form-control" placeholder="رمز عبور جاری" aria-describedby="email-address">

                            </div>
                            <span asp-validation-for="Password"></span>
                            <div class="input-group">
                                <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                <input asp-for="NewPassword" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">

                            </div>
                            <span asp-validation-for="NewPassword"></span>
                            <div class="input-group">
                                <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                <input asp-for="RePassword" type="password" class="form-control" placeholder=" تکرار رمز عبور " aria-describedby="password">

                            </div>
                            <span asp-validation-for="RePassword"></span>


                            <button class="btn btn-success">تغییر کلمه عبور</button>

                        </form>
                    </div>

                </div>
            </div>
        </div>

</main>

