@using MyLearn.DataLayer.Entities.Wallet;
@using TopLearn.Core.Convertors;
@using MyLearn.Core.Dtos.UserPanel;
@model ChargeWalletViewModel
@{
    ViewData["Title"] = "کیف پول شما";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> کیف پول شما</li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> افزایش موجودی کیف پول </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="Index" method="post" enctype="multipart/form-data">


                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="Amount"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" asp-for="Amount" placeholder="مبلغ" aria-describedby="Amount">
                                        </div>
                                    </div>
                                    <span asp-validation-for="Amount"></span>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> افزایش </button>
                                    </div>
                                </div>

                            </form>
                            <hr />
                            @{
                                List<Wallet> wallets = ViewBag.ListWalletUser as List<Wallet>;
                            }
                            <table class="table table-bordered">
                                <tr>
                                    <th>مبلغ</th>
                                    <th>تاریخ</th>
                                    <th>نوع تراکنش</th>
                                    <th>شرح</th>
                                </tr>
                                @foreach (var item in wallets)
                                {
                                    <tr>
                                        <td>@item.Amount</td>
                                        <td>@item.CreateDate.ToShamsi()</td>
                                        @if (item.TypeId == 1)
                                        {
                                            <td>واریز</td>
                                        }
                                        else
                                        {
                                            <td>برداشت</td>
                                        }
                                        <td>@item.Descreption</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </div>
</main>
