@using MyLearn.DataLayer.Entities.Course;
@model List<Course>
<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">دوره های شما</li>
        </ul>
    </nav>
</div>


<main>
    <div class="container">
        <div class="user-account">
         
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <div class="inner form-layer">

                            <header><h1> دوره های شما</h1></header>
                            <hr />


                            <table class="table table-bordered">
                                <tr>
                                    <th>عنوان دوره</th>
                                    <th>وضعیت دوره</th>
                                    <th>تعداد قسمت ها</th>
                                    <th>دستورات</th>

                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CourseTitle
                                        </td>
                                        <td>@item.CourseStatus.StatusTitle</td>

                                        <td>@item.CourseEpisodes.Count</td>
                                        <td>
                                            <a class="btn btn-info " asp-action="ShowCourseEpisode" asp-controller="Master" asp-route-id="@item.CourseId">مدیریت قسمت ها</a>

                                        </td>

                                    </tr>
                                }



                            </table>


                        </div>

                    </section>

                </div>
            </div>
        </div>
    </div>
</main>